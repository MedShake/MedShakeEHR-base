      				'name' : 'description',
      				'placeholder' : 'description du formulaire',
      				'class' : 'form-control',
      				'autocomplete' : 'off',
      				'value' : page.form.description
      			},
      			'label' : {
      				'position' : 'before',
      				'label' : 'Description du formulaire',
      			}
      		}) }}
      		</div>

      		<div class="form-group">
      		{{ f.select ({
      			'select' : {
      				'name' : 'cat',
      				'class' : 'form-control',
      				'autocomplete' : 'off',
      				'values' : page.tabCat,
      				'valueDefaut': page.form.cat
