{% extends "page.html.twig" %}
{% import "macroForm.html.twig" as f %}
{% block title %}MedShakeEHR : configuration{% endblock %}

{% block head %}
{{ parent() }}
<script defer src="{{ config.protocol }}{{ config.host }}{{ config.urlHostSuffixe }}/js/configuration.js"></script>
{% endblock %}

{% block body %}
{% if page.groupe == "admin" %}
	<h1>Catégories des données administratives</h1>
{% elseif page.groupe == "medical" %}
	<h1>Catégories des données médicales</h1>
{% elseif page.groupe == "typecs" %}
	<h1>Catégories des types de consultation</h1>
{% elseif page.groupe == "courrier" %}
	<h1>Catégories des types de courrier</h1>
{% elseif page.groupe == "mail" %}
	<h1>Catégories des types de mail</h1>
{% elseif page.groupe == "doc" %}
	<h1>Catégories des types de document</h1>
{% elseif page.groupe == "ordo" %}
	<h1>Catégories des types d'ordonnance</h1>
{% elseif page.groupe == "reglement" %}
	<h1>Catégories des types de règlement</h1>
{% elseif page.groupe == "reglement" %}
	<h1>Catégories des types Dicom</h1>
{% elseif page.groupe == "user" %}
	<h1>Catégories des types User</h1>
{% elseif page.groupe == "relation" %}
	<h1>Catégories des types Relation</h1>
{% endif %}
<div>
<div>

	{# Nav tabs #}
	<ul class="nav nav-tabs" role="tablist">
		<li role="presentation" class="active"><a href="{{ config.protocol }}{{ config.host }}{{ config.urlHostSuffixe }}/configuration/data-cat/{{ page.groupe }}/" aria-controls="categories" role="tab">Catégories</a></li>
		<li role="presentation"><a href="{{ config.protocol }}{{ config.host }}{{ config.urlHostSuffixe }}/configuration/data-type/{{ page.groupe }}/" aria-controls="types" role="tab" >Types</a></li>
	</ul>

  {# Tab panes #}
	<div class="tab-content">

		{# categories tab #}
		<div role="tabpanel" class="tab-pane active" id="categories">

			<p></p>
			<button type="button" class="btn btn-primary pull-right reset-modal" data-toggle="modal" data-target="#modalNewCat">
			Nouvelle catégorie
			</button>

			<table class="table table-hover">
			<caption>Catégories de type de données</caption>
			<thead>
			<tr>
				<th>#</th>
				<th>Label</th>
				<th>Enfants</th>
				<th>Description</th>
				<th>Actions</th>
			</tr>
			</thead><tbody>
			{% for k,v in page.tabCat %}
			<tr>
				<td>{{ k }}</td>
				<td>{{ v.label }}</td>
				<td>{% if v.enfants > 0 %}<a class="btn btn-default btn-xs" href="{{ config.protocol }}{{ config.host }}{{ config.urlHostSuffixe }}/configuration/data-type/{{ v.groupe }}/{{ k }}/"><span class="glyphicon glyphicon-zoom-in" aria-hidden="true"></span></a> {{ v.enfants }}{% endif %}</td>
				<td>{{ v.description }}</td>
				<td>
					<button type="button" class="btn btn-default btn-xs edit-by-prim-key" aria-label="Editer" data-id="{{ k }}" data-table="data_cat" data-form="formModalNewCat" data-modal="modalNewCat">
					<span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
					</button>

					<button type="button" class="btn btn-default btn-xs delete-by-prim-key" aria-label="Supprimer" {% if v.enfants > 0 or v.type=="base" %}disabled="disabled"{% endif %} data-id="{{ k }}" data-table="data_cat">
					<span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
					</button>
				</td>
			</tr>
			{% endfor %}
			</tbody>
			</table>

		</div>

	</div>

</div>


{# modal new category #}
<div class="modal fade" id="modalNewCat" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
	<div class="modal-dialog" role="document">
		<div class="modal-content">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
				<h4 class="modal-title" id="myModalLabel">Création / édition catégorie</h4>
			</div>
			<div class="modal-body">

			<div class="alert alert-danger" role="alert" style="display : none;">
				Merci de considérer les informations suivantes et de corriger les champs concernés :
				<ul>
				</ul>
			</div>

			<form id="formModalNewCat" action="{{ config.protocol }}{{ config.host }}{{ config.urlHostSuffixe }}/configuration/ajax/configDataCatCreate/" data-groupe="{{ page.groupe }}">
				<div class="form-group">
				{{ f.input ({
					'input' : {
						'type' : 'text',
						'name' : 'name',
						'placeholder' : 'nom à usage interne, pas d\'espace, pas d\'accent',
						'class' : 'form-control',
						'autocomplete' : 'off'
					},
					'label' : {
						'position' : 'before',
						'label' : 'Nom à usage interne',
					}
				}) }}
				</div>

				<div class="form-group">
				{{ f.input ({
					'input' : {
						'type' : 'text',
						'name' : 'label',
						'placeholder' : 'nom principal',
						'class' : 'form-control',
						'autocomplete' : 'off'
					},
					'label' : {
						'position' : 'before',
						'label' : 'Label',
					}
				}) }}
				</div>

				<div class="form-group">
				{{ f.input ({
					'input' : {
						'type' : 'text',
						'name' : 'description',
						'placeholder' : 'description',
						'class' : 'form-control',
						'autocomplete' : 'off'
					},
					'label' : {
						'position' : 'before',
						'label' : 'Description',
					}
				}) }}
				</div>
			</form>

			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-default" data-dismiss="modal">Fermer</button>
				<button type="button" class="btn btn-primary modal-save" data-form="formModalNewCat" data-modal="modalNewCat">Sauvegarder</button>
			</div>
		</div>
	</div>
</div>

{% endblock %}
