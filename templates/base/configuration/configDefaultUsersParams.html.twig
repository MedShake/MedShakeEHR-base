{% extends "page.html.twig" %}
{% import "macroForm.html.twig" as f %}
{% block title %}MedShakeEHR : configuration{% endblock %}

{% block head %}
  {{ parent() }}
  <script defer src="{{ config.protocol }}{{ config.host }}{{ config.urlHostSuffixe }}/js/configuration.js"></script>
{% endblock %}

{% block body %}

  <ol class="breadcrumb">
    <li>
        <a href="{{ config.protocol }}{{ config.host }}{{ config.urlHostSuffixe }}/configuration/">Configuration</a>
    </li>
    <li>
        <a href="{{ config.protocol }}{{ config.host }}{{ config.urlHostSuffixe }}/configuration/#cc">Paramètres courants</a>
    </li>
    <li class="active">Paramètres utilisateurs par défaut</li>
  </ol>

  <h1>Paramètres utilisateurs par défaut</h1>

  <form method="post" action="{{ config.protocol }}{{ config.host }}{{ config.urlHostSuffixe }}/configuration/actions/configDefaultUsersParams/">

  <div class="col-md-12">
    <table class="table table-hover table-striped">
      <thead>
        <tr>
          <th class="col-md-2">Paramètre</th>
          <th class="col-md-4">Valeur</th>
          <th class="col-md-4">Commentaire</th>
        </tr>
      </thead>
      <tbody>
        {% for v in page.params %}
        <tr>
          {% if v.type=='titre' %}
            <td colspan=3><h3>{{ v.value }}</h3></td>
          {% else %}
            <td>{{ v.name }}</td>
            <td>
              {{ f.input ({
                'input' : {
                  'type' : 'text',
                  'name' : v.name,
                  'id' : v.name ~ 'ID',
                  'placeholder' : v.value,
                  'class' : 'form-control',
                  'value' : v.value,
                  'autocomplete' : 'off'
                }
              }) }}
            </td>
            <td>{{ v.commentaire }}</td>
          {% endif %}
        </tr>
        {% endfor %}
      </tbody>
    </table>

    {{ f.input ({
      'input' : {
        'type' : 'submit',
        'value' : 'Enregistrer',
        'class' : 'btn btn-primary'
      }
    }) }}
  </div>

</form>

{% endblock %}
