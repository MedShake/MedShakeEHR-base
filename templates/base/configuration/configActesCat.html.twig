{% extends "page.html.twig" %}
{% import "macroForm.html.twig" as f %}
{% block title %}{{ config.designAppName }} : configuration{% endblock %}

{% block head %}
{{ parent() }}
<script defer src="{{ config.protocol }}{{ config.host }}{{ config.urlHostSuffixe }}/js/configuration.js?{{ modules.base }}"></script>
{% endblock %}

{% block body %}

<ol class="breadcrumb">
  <li class="breadcrumb-item">
    <a href="{{ config.protocol }}{{ config.host }}{{ config.urlHostSuffixe }}/configuration/">Configuration</a>
  </li>
  <li class="breadcrumb-item">
    <a href="{{ config.protocol }}{{ config.host }}{{ config.urlHostSuffixe }}/configuration/#cc">Paramètres courants</a>
  </li>
  <li class="breadcrumb-item active">
    Actes et tarifs
  </li>
</ol>

<h1>Catégories des factures types</h1>

{# Nav tabs #}
<ul class="nav nav-tabs mt-3" role="tablist">
  <li role="presentation" class="nav-item">
    <a class="nav-link" href="{{ config.protocol }}{{ config.host }}{{ config.urlHostSuffixe }}/configuration/actes-base/" aria-controls="prescriptions" role="tab">Actes élémentaires</a>
  </li>
  <li role="presentation" class="nav-item">
    <a class="nav-link active" href="{{ config.protocol }}{{ config.host }}{{ config.urlHostSuffixe }}/configuration/actes-cat/" aria-controls="categories" role="tab">Catégories factures types</a>
  </li>
  <li role="presentation" class="nav-item">
    <a class="nav-link" href="{{ config.protocol }}{{ config.host }}{{ config.urlHostSuffixe }}/configuration/actes/0/" aria-controls="types" role="tab">Factures types</a>
  </li>
</ul>

{# Tab panes #}
<div class="tab-content">

	{# categories tab #}
	<div role="tabpanel" class="tab-pane active" id="categories">

		<div class="row my-3">
      <div class="col text-right">
		     <button type="button" class="btn btn-primary reset-modal" data-toggle="modal" data-target="#modalNewCat"><i class="fas fa-plus"></i> Nouvelle catégorie</button>
       </div>
    </div>

		<table class="table table-sm mb-0 table-hover">
  		<thead class="thead-light">
    		<tr>
    			<th>#</th>
          <th>Module</th>
    			<th>Ordre</th>
    			<th>Label</th>
    			<th>Enfants</th>
    			<th>Description</th>
    			<th></th>
    		</tr>
  		</thead>
    <tbody>
		{% for k,v in page.tabCat %}
			<tr>
				<td>{{ k }}</td>
        <td>{{ v.module }}</td>
				<td>{{ v.displayOrder }}</td>
				<td>{{ v.label }}</td>
        <td>
          {% if v.enfants > 0 %}
            <div class="btn-group">
              <a class="btn btn-light btn-sm" role="button" href="{{ config.protocol }}{{ config.host }}{{ config.urlHostSuffixe }}/configuration/actes/0/{{ k }}/">
                <span class="fas fa-search-plus" aria-hidden="true"></span>
              </a>
            </div>
            {{ v.enfants }}
          {% endif %}
        </td>
				<td>{{ v.description }}</td>
				<td class="text-right">
          <div class="btn-group">
					  <button type="button" class="btn btn-light btn-sm edit-by-prim-key" aria-label="Editer" data-id="{{ k }}" data-table="actes_cat" data-form="formModalNewCat" data-modal="modalNewCat">
					  <span class="fas fa-pencil-alt" aria-hidden="true"></span>
					  </button>

					  <button type="button" class="btn btn-light btn-sm delete-by-prim-key" aria-label="Supprimer" {% if v.enfants > 0 or v.module == "base" %}disabled{% endif %} data-id="{{ k }}" data-table="actes_cat">
					  <span class="fas fa-times" aria-hidden="true"></span>
					  </button>
          </div>
				</td>
			</tr>
		{% endfor %}
	  </tbody>
	 </table>
	</div>
</div>
{% endblock %}

{% block modals %}
{# modal new category #}
<div class="modal fade" id="modalNewCat" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
	<div class="modal-dialog" role="document">
		<div class="modal-content">
			<div class="modal-header">
				<h4 class="modal-title font-weight-bold" id="myModalLabel">Création / édition catégorie</h4>
				<button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
			</div>
			<div class="modal-body">

			{{ f.errorsBloc() }}

			<form id="formModalNewCat" action="{{ config.protocol }}{{ config.host }}{{ config.urlHostSuffixe }}/configuration/ajax/configActesCatCreate/" data-groupe="SERTaRIENici">
				<div class="form-group">
				{{ f.input ({
					'input' : {
						'type' : 'text',
						'name' : 'name',
						'placeholder' : 'nom à usage interne, pas d\'espace, pas d\'accent',
						'class' : 'form-control',
						'autocomplete' : 'off'
					},
					'label' : {
						'position' : 'before',
						'label' : 'Nom à usage interne',
					}
				}) }}
				</div>

				<div class="form-group">
				{{ f.input ({
					'input' : {
						'type' : 'text',
						'name' : 'label',
						'placeholder' : 'nom principal',
						'class' : 'form-control',
						'autocomplete' : 'off'
					},
					'label' : {
						'position' : 'before',
						'label' : 'Label',
					}
				}) }}
				</div>

				<div class="form-group">
				{{ f.input ({
					'input' : {
						'type' : 'text',
						'name' : 'description',
						'placeholder' : 'description',
						'class' : 'form-control',
						'autocomplete' : 'off'
					},
					'label' : {
						'position' : 'before',
						'label' : 'Description',
					}
				}) }}
				</div>

				<div class="form-group">
				{{ f.input ({
					'input' : {
						'type' : 'text',
						'name' : 'displayOrder',
						'placeholder' : 'ordre d\'affichage',
						'class' : 'form-control',
						'autocomplete' : 'off'
					},
					'label' : {
						'position' : 'before',
						'label' : 'Ordre d\'affichage',
					}
				}) }}
				</div>

        <div class="form-group">
    		{{ f.select ({
    			'select' : {
    				'name' : 'module',
    				'class' : 'form-control',
    				'autocomplete' : 'off',
    				'values' : page.modules
    			},
    			'label' : {
    				'position' : 'before',
    				'label' : 'Module concerné',
    			}
    		}) }}
    		</div>

			</form>

			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-light" data-dismiss="modal">Abandonner</button>
				<button type="button" class="btn btn-primary modal-save" data-form="formModalNewCat" data-modal="modalNewCat">Sauvegarder</button>
			</div>
		</div>
	</div>
</div>
{% endblock %}
