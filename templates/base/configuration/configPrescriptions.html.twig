{% extends "page.html.twig" %}
{% import "macroForm.html.twig" as f %}
{% block title %}MedShakeEHR : configuration{% endblock %}

{% block head %}
    {{ parent() }}
    <script defer src="{{ config.protocol }}{{ config.host }}{{ config.urlHostSuffixe }}/js/configuration.js"></script>
{% endblock %}

{% block body %}
    <h1>Gestion des prescriptions types</h1>
    <div>
        <div>

            {# Nav tabs #}
            <ul class="nav nav-tabs" role="tablist">
                <li role="presentation">
                    <a href="{{ config.protocol }}{{ config.host }}{{ config.urlHostSuffixe }}/configuration/prescriptions-cat/" aria-controls="categories" role="tab">Catégories</a>
                </li>
                {% for id, user in page.users %}
                  <li role="presentation" {% if page.selectUser == id %}class="active"{% endif %}>
                      <a href="{{ config.protocol }}{{ config.host }}{{ config.urlHostSuffixe }}/configuration/prescriptions/{{ id }}/{% if page.groupe > 0 %}{{ page.groupe }}/{% endif %}" aria-controls="prescriptions" role="tab">{% if id == 0 %}Prescriptions communes{% else %}Prescriptions : {{ user }}{% endif %}</a>
                  </li>
                {% endfor %}

            </ul>

            {# Tab panes #}
            <div class="tab-content">

                {# categories tab #}
                <div role="tabpanel" class="tab-pane active" id="prescriptions">

                    <p></p>
                    <button type="button" class="btn btn-primary pull-right reset-modal" data-toggle="modal" data-target="#modalNewCat">
                        Nouvelle prescription
                    </button>

                    {% for k, v in page.tabTypes %}
                        <h2 id="cat{{ v.0.cat }}">{{ v.0.catLabel }} <small><a class="btn btn-default btn-sm" href="{{ config.protocol }}{{ config.host }}{{ config.urlHostSuffixe }}/configuration/prescriptions/{{ page.selectUser }}/{{ v.0.cat }}/"><span class="glyphicon glyphicon-search" aria-hidden="true"></span></a></small></h2>
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Label</th>
                                    <th>Texte</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for w in v %}
                                    <tr>
                                        <td>{{ w.id }}</td>
                                        <td>{{ w.label }}</td>
                                        <td>{{ w.description }}</td>
                                        <td>
                                            <button type="button" class="btn btn-default btn-xs edit-by-prim-key" aria-label="Editer" data-id="{{ w.id }}" data-table="prescriptions" data-form="formModalNewCat" data-modal="modalNewCat">
                                                <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                                            </button>

                                            <button type="button" class="btn btn-default btn-xs delete-by-prim-key" aria-label="Supprimer" {% if w.enfants > 0 or w.type=="base" %} disabled="disabled" {% endif %} data-id="{{ w.id }}" data-table="prescriptions">
                                                <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                                            </button>
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    {% endfor %}
                </div>

            </div>

        </div>

        {# modal new category #}
        <div class="modal fade" id="modalNewCat" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                        <h4 class="modal-title" id="myModalLabel">Création / édition</h4>
                    </div>
                    <div class="modal-body">

                        <div class="alert alert-danger" role="alert" style="display : none;">
                            Merci de considérer les informations suivantes et de corriger les champs concernés :
                            <ul></ul>
                        </div>

                        <form id="formModalNewCat" action="{{ config.protocol }}{{ config.host }}{{ config.urlHostSuffixe }}/configuration/ajax/configPrescriptionCreate/">

                            <div class="form-group">
                                {{ f.input ({ 'input' : { 'type' : 'text', 'name' : 'label', 'placeholder' : 'label', 'class' : 'form-control', 'autocomplete' : 'off' }, 'label' : { 'position' : 'before', 'label' : 'Label', } }) }} </div>
                            <div class="form-group">
                                {{ f.select ({ 'select' : { 'name' : 'cat', 'class' : 'form-control', 'autocomplete' : 'off', 'values' : page.catList, 'valueDefaut': '' }, 'label' : { 'position' : 'before', 'label' : 'Catégorie', } }) }}
                            </div>

                            <div class="form-group">
                                {{ f.select ({ 'select' : { 'name' : 'toID', 'class' : 'form-control', 'autocomplete' : 'off', 'values' : page.users, 'valueDefaut': '' }, 'label' : { 'position' : 'before', 'label' : 'Utilisateur', } }) }}
                            </div>

                            <div class="form-group">
                              {{ f.textarea ({ 'textarea' : { 'name' : 'description', 'placeholder' : 'description', 'class' : 'form-control', 'autocomplete' : 'off', 'rows' : '8' }, 'label' : { 'position' : 'before', 'label' : 'Prescription', } }) }}
                            </div>
                        </form>
                      </div>
                      <div class="modal-footer">
                            <button type="button" class="btn btn-default" data-dismiss="modal">Fermer</button>
                            <button type="button" class="btn btn-primary modal-save" data-form="formModalNewCat" data-modal="modalNewCat">Sauvegarder</button>
                      </div>
                    </div>
                </div>
              </div>
{% endblock %}
