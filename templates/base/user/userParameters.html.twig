{% extends "page.html.twig" %}
{% import "macroForm.html.twig" as f %}
{% block title %}MedShakeEHR : Bienvenue{% endblock %}

{% block head %}
{{ parent() }}
  <script defer src="{{ config.protocol }}{{ config.host }}{{ config.urlHostSuffixe }}/js/parameters.js"></script>
{% endblock %}

{% block body %}

  <h1>Param√®tres utilisateur</h1>
  {# validation error display bloc #}
  {{ f.errorFormDiv( session['form'][page.formIN]['validationErrorsMsg'] ) }}

  {# form display #}
  <form id="formRdv" action="{{ config.protocol }}{{ config.host }}{{ config.urlHostSuffixe }}/user/actions/changeUserParameters/" method="post">
    <h4>Compte MedShakeEHR</h4>
    <div class="row">
      <div class="form-group col-md-3">
        <label class="control-label" for="id_clicRdvUserId_id">Mot de passe actuel</label>
        <input id="id_actualPassword_id" class="form-control" name="p_actualPassword" value="" autocomplete="off" type="password"></input>
      </div>
    </div>
    <div class="row">
      <div class="form-group col-md-3">
        <label class="control-label" for="id_clicRdvUserId_id">Nouveau mot de passe</label>
        <input id="id_password_id" class="form-control" name="p_password" value="" autocomplete="off" type="password"></input>
      </div>
    </div>
    <div class="row">
      <div class="form-group col-md-3">
        <label class="control-label" for="id_clicRdvUserId_id">Nouveau mot de passe (confirmation)</label>
        <input id="id_verifPassword_id" class="form-control" name="p_verifPassword" value="" autocomplete="off" type="password"></input>
      </div>
    </div>
    {{ f.formbuilder(page.form , page.formIN , session) }}
    <button id="Submit" class="btn btn-primary" type="submit">Valider</button>
  </form>

{% endblock %}
