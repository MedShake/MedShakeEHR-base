/##
 # Template > paramètres utilisateur : modal de création / edition de
 # cat prescriptions type
 #
 # @author Bertrand Boutillier <b.boutillier@gmail.com>
 #
#}
{% import "macroForm.html.twig" as f %}
<div class="modal fade" id="modalNewPres" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="myModalLabel">Création / édition</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">

                <div class="alert alert-danger" role="alert" style="display : none;">
                    Merci de considérer les informations suivantes et de corriger les champs concernés :
                    <ul></ul>
                </div>

                <form id="formModalNewPres" action="{{ config.protocol }}{{ config.host }}{{ config.urlHostSuffixe }}/user/ajax/userParametersPrescriptionsCreate/">

                  <input type="hidden" name="toID" value="{{ user.id }}">
                  <input type="hidden" name="fromID" value="{{ user.id }}">

                    <div class="form-group">
                        {{ f.input ({ 'input' : { 'type' : 'text', 'name' : 'label', 'placeholder' : 'label', 'class' : 'form-control', 'autocomplete' : 'off' }, 'label' : { 'position' : 'before', 'label' : 'Label', } }) }} </div>
                    <div class="form-group">
                        {{ f.select ({ 'select' : { 'name' : 'cat', 'class' : 'form-control', 'autocomplete' : 'off', 'values' : '', 'valueDefaut': '' }, 'label' : { 'position' : 'before', 'label' : 'Catégorie', } }) }}
                    </div>

                    <div class="form-group">
                      {{ f.textarea ({ 'textarea' : { 'name' : 'description', 'placeholder' : 'description', 'class' : 'form-control', 'autocomplete' : 'off', 'rows' : '8' }, 'label' : { 'position' : 'before', 'label' : 'Prescription', } }) }}
                    </div>
                </form>
              </div>
              <div class="modal-footer">
                    <button type="button" class="btn" data-dismiss="modal">Fermer</button>
                    <button type="button" class="btn btn-primary modal-save" data-form="formModalNewPres" data-modal="modalNewPres">Sauvegarder</button>
              </div>
            </div>
        </div>
      </div>
