/##
 # Template > patient : tableau des liens familiaux
 #
 # @author Bertrand Boutillier <b.boutillier@gmail.com>
 #
#}




<div class="card" style="margin-top : 8px">
  <div class="card-header gras">Liens familiaux
  </div>

  <table class="table table-sm table-striped table-hover small">
    <thead>
      <tr>
        <th class="col-md-1"></th>
        <th class="col-md-5">patient</th>
        <th class="col-md-3">ddn</th>
        <th class="col-md-3">relation</th>
      </tr>
    </thead>
    <tbody>
      {% for v in page.liensFamiliaux %}
        <tr>
          <td>
            <a target="_blank" class="btn btn-light btn-sm" role="button" href="{{ config.protocol }}{{ config.host }}{{ config.urlHostSuffixe }}/patient/{{ v.patientID }}/">
              <span class="fa fa-folder-open" aria-hidden="true"></span></a>
          </td>
          <td class="gras">{{ v.nom }}
            {{v.prenom }}</td>
          <td>{{ v.ddn }}</td>
          <td>{{ v.typeRelation }}</td>
        </tr>
      {% endfor %}
    </tbody>

  </table>
</div>

<a class="btn btn-info btn-block" role="button" href="{{ config.protocol }}{{ config.host }}{{ config.urlHostSuffixe }}/patient/relations/{{ page.patient.id }}/" title="Édition des relations">
  <span class="fa fa-link" aria-hidden="true"></span> Gérer les liens familiaux</a>
