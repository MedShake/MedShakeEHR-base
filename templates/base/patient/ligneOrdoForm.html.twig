{% import "macroForm.html.twig" as f %}

{% if page.ligneOrdo %}{% set ligne = page.ligneOrdo %}{% endif %}

<div class="row ligneOrdo">
    <div class="col-md-12">

        <div class="form-group">
            <button type="button" class="close cleanLigneOrdo" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>

            <div class="row">
                <div class="col-md-11 pl-0">
                  {{ f.textarea ({
                    'textarea' : {
                      'name' : ligne.formname ,
                      'id' : 'ligne' ~ ligne.formname ~'ID',
                      'class' : 'form-control form-control-sm',
                      'value' : ligne.description ,
                      'autocomplete' : 'off',
                      'rows' : '2'
                    },
                    'label' : {
                      'position' : 'before',
                      'label' : ligne.label ~ ligne.labelInitiale,
                      'class' : 'control-label'
                    }
                  }) }}


                </div>
                <div class="col-md-1">
                    <div class="checkbox">
                        <label>
                            <input type="checkbox" value="true" name="{{ ligne.formname ~ 'CB' }}" {% if ligne.ald == 'true' or ligne.ald == '1' %} checked="checked"{% endif %}/>
                            ALD
                        </label>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>
