/##
 # Template > patient > historique : ligne pour un règlement
 #
 # @author Bertrand Boutillier <b.boutillier@gmail.com>
 #}

 <tr class="tr{{ cs.id }} trLigneExamen" data-objetID="{{ cs.id }}" data-alternatTitre="{{ cs.titre|e('html_attr') }}" data-registerDate="{{ cs.registerDate }}" data-creationDate="{{ cs.creationDate }}" data-groupe="{{ cs.groupe|e('html_attr') }}">
  <td>
     <span class="d-none d-md-inline">{{ cs.creationTime }}</span>
     <span class="d-inline d-md-none">{{ cs.creationTimeShort }}</span>
    {% if cs.creationDate != cs.registerDate %}&nbsp;<button type="button" class="btn btn-default btn-sm changeCreationDate" title="Création réelle le {{ cs.registerDate|date("d/m/Y H:i:s") }}">
     <span class="far fa-clock" aria-hidden="true"></span>
    </button>{% endif %}
  </td>
  <td>
    <div class="btn-group">
      {# edit #}
      <button class="btn btn-default btn-sm editReglement d-none d-lg-inline-block" type="button">
       {% if cs.iconeType == 'update' %}
         <span class="fa fa-pencil-alt" aria-hidden="true" title="Editer"></span>
       {% else %}
         <span class="fa fa-share" aria-hidden="true" title="Dupliquer"></span>
       {% endif %}
      </button>
      {# option #}
      <div class="btn-group">
        <button type="button" class="btn btn-default btn-sm dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <span class="fa fa-bars" aria-hidden="true"></span>
        </button>
        <ul class="dropdown-menu">

          <li class="d-block d-lg-none">
           {% if cs.iconeType == 'update' %}
             <a class="dropdown-item editReglement">Editer</a>
           {% else %}
             <a class="dropdown-item editReglement">Dupliquer</a>
           {% endif %}
          </li>
          <li class="dropdown-divider d-block d-lg-none"></li>
          <li>
              <a href="#" class="dropdown-item toggleImportant" data-objetID="{{ cs.id }}" data-importanceActu="{{ cs.important }}">
                  {% if cs.important == 'n' %}Rendre important{% else %}N'est plus important{% endif %}
              </a>
          </li>
          <li>
              <a class="dropdown-item" data-toggle="modal" href="#alternatTitreModal">Compléter titre</a>
          </li>
          <li>
              <a href="#" class="dropdown-item changeCreationDate">Modifier la date</a>
          </li>
          <li role="separator" class="dropdown-divider"></li>
          <li class="disabled">
              <a class="dropdown-item" href="#">#{{ cs.id }}</a>
          </li>
          <li role="separator" class="dropdown-divider"></li>
          <li>
              <a href="#" class="dropdown-item suppCs" data-objetID="{{ cs.id }}">Supprimer</a>
          </li>
        </ul>
      </div>
    </div>
  </td>
  <td>
    <span class="icoImportant{{ cs.id }}">
        {% if cs.important == 'y' %}
            <span class="fa fa-flash" aria-hidden="true"></span>
        {% endif %}
    </span>
    {{ cs.label }}
    <span class="alternatTitre{{ cs.id }}">
        {% if cs.titre %}
            :
            {{ cs.titre|e }}{% endif %}
    </span>
  </td>
  <td class="d-none d-lg-table-cell">{{ cs.prenom|e }} {{ cs.nom|e }}</td>
  <td class="d-lg-none">{{ cs.prenom|first }}. {{ cs.nom|first }}.</td>
</tr>

