/##
 # Template > patient > historique : ligne pour une ordonnance
 #
 # @author Bertrand Boutillier <b.boutillier@gmail.com>
 # @contrib fr33z00 <https://github.com/fr33z00>
 #}

<tr class="tr{{ cs.id }} trLigneExamen" data-objetID="{{ cs.id }}" data-alternatTitre="{{ cs.titre|e('html_attr') }}" data-groupe="{{ cs.groupe|e('html_attr') }}" data-module="{{ cs.module }}">
  <td>{{ cs.creationTime }}</td>
  <td>
    {# edit #}
    <a href="#" class="editOrdo">
      <button class="btn btn-default btn-sm" role="button">
        {% if cs.iconeType == 'update' %}
          <span class="fa fa-pencil-alt" aria-hidden="true" title="Editer"></span>
        {% else %}
          <span class="fa fa-share" aria-hidden="true" title="Dupliquer"></span>
        {% endif %}
      </button>
    </a>

    {# print #}

    <a  href="{{ config.protocol }}{{ config.host }}{{ config.urlHostSuffixe }}/showpdf/{{ cs.id }}/" target="_blank"><button class="btn btn-default btn-sm" role="button">
      <span class="fa fa-print" aria-hidden="true" title="Imprimer"></span>
    </a>

    {# send #}
    {% if config.smtpHost or config.apicryptSmtpHost or config.faxService %}
      <div class="btn-group">
        <button type="button" class="btn btn-default btn-sm dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" title="Envoyer">
          <span class="fa fa-paper-plane" aria-hidden="true"></span>
        </button>
        <ul class="dropdown-menu">
          {% if config.smtpHost %}
          <li>
            <a class="dropdown-item newMail" href="#" data-formtocall="baseSendMail" data-objetID="{{ cs.id }}" data-mailtype="ns">Envoyer en clair</a>
          </li>
          {% endif %}
          {% if config.apicryptSmtpHost %}
            <li>
              <a class="dropdown-item newMail" href="#" data-formtocall="baseSendMailApicrypt" data-objetID="{{ cs.id }}" data-mailtype="apicrypt">Envoyer en apicrypt</a>
            </li>
          {% endif %}
          {% if (config.smtpHost or config.apicryptSmtpHost) and config.faxService %}
            <li role="separator" class="dropdown-divider"></li>
          {% endif %}
          {% if config.faxService %}
            <li>
              <a class="dropdown-item newMail" href="#" data-formtocall="baseFax" data-objetID="{{ cs.id }}" data-mailtype="ecofax">Envoyer par fax</a>
            </li>
          {% endif %}
          {% if cs.sendMail > 0 %}
            <li role="separator" class="dropdown-divider"></li>
            <li>
              <a class="dropdown-item" href="{{ config.protocol }}{{ config.host }}{{ config.urlHostSuffixe }}/logs/historiquePrint/{{ cs.id }}/">Historique des envois</a>
            </li>
          {% endif %}
        </ul>
      </div>
    {% endif %}
    {% if cs.sendMail > 0 %}
      <a href="{{ config.protocol }}{{ config.host }}{{ config.urlHostSuffixe }}/logs/historiqueMailSend/{{ cs.id }}/">
        <button class="btn btn-default btn-sm">
          <span class="fa fa-envelope" aria-hidden="true"></span>
        </button>
      </a>
    {% endif %}

  </td>
  <td>
    <span class="icoImportant{{ cs.id }}">
      {% if cs.important == 'y' %}
        <span class="fa fa-flash" aria-hidden="true"></span>
      {% endif %}
    </span>
    {{ cs.label }}
    <span class="alternatTitre{{ cs.id }}">
      {% if cs.titre %}
        :
        {{ cs.titre|e }}{% endif %}
    </span>

  </td>
  <td>{{ cs.prenom|e }} {{ cs.nom|e }}</td>
  <td>

    {# option #}
    <div class="btn-group">
      <button type="button" class="btn btn-default btn-sm dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        <span class="fa fa-wrench" aria-hidden="true"></span>
      </button>
      <ul class="dropdown-menu dropdown-menu-right">
        <li>
          <a href="#" class="dropdown-item toogleImportant" data-objetID="{{ cs.id }}" data-importanceActu="{{ cs.important }}">
            {% if cs.important == 'n' %}Rendre important{% else %}N'est plus important{% endif %}
          </a>
        </li>
        <li>
          <a class="dropdown-item" data-toggle="modal" href="#alternatTitreModal">Compléter titre</a>
        </li>
        <li role="separator" class="dropdown-divider"></li>
        <li class="disabled">
          <a class="dropdown-item" href="#">#{{ cs.id }}</a>
        </li>
        <li role="separator" class="dropdown-divider"></li>
        {% if cs.sendMail > 0 %}
          <li>
            <a class="dropdown-item" href="{{ config.protocol }}{{ config.host }}{{ config.urlHostSuffixe }}/logs/historiqueMailSend/{{ cs.id }}/">Historique des envois par mail</a>
          </li>
        {% endif %}
        <li>
          <a class="dropdown-item" href="{{ config.protocol }}{{ config.host }}{{ config.urlHostSuffixe }}/logs/historiquePrint/{{ cs.id }}/">Historique versions PDF générées</a>
        </li>
        <li role="separator" class="dropdown-divider"></li>
        <li>
          <a class="dropdown-item" href="{{ config.protocol }}{{ config.host }}{{ config.urlHostSuffixe }}/makepdf/{{ page.patient.id }}/ordo/{{ cs.id }}/" target="_blank">Forcer impression par défaut</a>
        </li>
        <li>
          <a target="_blank" href="{{ config.protocol }}{{ config.host }}{{ config.urlHostSuffixe }}/configuration/configShowTagsForCr/{{ cs.id }}/">Tags utilisables dans templates</a>
        </li>
        <li role="separator" class="dropdown-divider"></li>
        <li>
          <a class="dropdown-item" href="#" class="suppCs" data-objetID="{{ cs.id }}">Supprimer</a>
        </li>
      </ul>
    </div>

  </td>
</tr>
