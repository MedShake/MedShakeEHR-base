/##
 # Template > patient > historique : ligne pour une ordonnance
 #
 # @author Bertrand Boutillier <b.boutillier@gmail.com>
 # @contrib fr33z00 <https://github.com/fr33z00>
 #}

<tr class="tr{{ cs.id }} trLigneExamen collapse{% if cs.creationDate|date("Y") == "now"|date("Y") %} show{% endif %}" data-annee="{{ cs.creationDate|date("Y") }}" data-objetID="{{ cs.id }}" data-alternatTitre="{{ cs.titre|e('html_attr') }}" data-groupe="{{ cs.groupe|e('html_attr') }}">
  <td>
   <span class="d-none d-md-inline">{{ cs.creationTime }}</span>
   <span class="d-inline d-md-none">{{ cs.creationTimeShort }}</span>
  </td>
  <td>
    <div class="btn-group">
      {# edit #}
      <button class="btn  btn-sm editOrdo d-none d-lg-inline-block" type="button">
        {% if cs.iconeType == 'update' %}
          <span class="fa fa-pencil-alt" aria-hidden="true" title="Editer"></span>
        {% else %}
          <span class="far fa-clone" aria-hidden="true" title="Dupliquer"></span>
        {% endif %}
      </button>

      {# print #}

      <a class="btn  btn-sm d-none d-lg-inline-block" role="button" href="{{ config.protocol }}{{ config.host }}{{ config.urlHostSuffixe }}/showpdf/{{ cs.id }}/" target="_blank">
        <span class="fa fa-print" aria-hidden="true" title="Imprimer"></span>
      </a>

      {# send #}
      {% if config.smtpHost or config.apicryptSmtpHost or config.faxService %}
        <div class="btn-group d-none d-lg-inline-flex">
          <button type="button" class="btn  btn-sm dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" title="Envoyer">
            <span class="fa fa-paper-plane" aria-hidden="true"></span>
          </button>
          <ul class="dropdown-menu">
            {% if config.smtpHost %}
            <li>
              <a class="dropdown-item newMail" href="#" data-formtocall="baseSendMail" data-objetID="{{ cs.id }}" data-mailtype="ns">Envoyer en clair</a>
            </li>
            {% endif %}
            {% if config.apicryptSmtpHost %}
              <li>
                <a class="dropdown-item newMail" href="#" data-formtocall="baseSendMailApicrypt" data-objetID="{{ cs.id }}" data-mailtype="apicrypt">Envoyer en apicrypt</a>
              </li>
            {% endif %}
            {% if (config.smtpHost or config.apicryptSmtpHost) and config.faxService %}
              <li role="separator" class="dropdown-divider"></li>
            {% endif %}
            {% if config.faxService %}
              <li>
                <a class="dropdown-item newMail" href="#" data-formtocall="baseFax" data-objetID="{{ cs.id }}" data-mailtype="ecofax">Envoyer par fax</a>
              </li>
            {% endif %}
            {% if cs.sendMail > 0 %}
              <li role="separator" class="dropdown-divider"></li>
              <li>
                <a class="dropdown-item" href="{{ config.protocol }}{{ config.host }}{{ config.urlHostSuffixe }}/logs/historiquePrint/{{ cs.id }}/">Historique des envois</a>
              </li>
            {% endif %}
          </ul>
        </div>
      {% endif %}
      {% if cs.sendMail > 0 %}
        <a class="btn  btn-sm d-none d-lg-inline-block" role="button" href="{{ config.protocol }}{{ config.host }}{{ config.urlHostSuffixe }}/logs/historiqueMailSend/{{ cs.id }}/">
          <span class="fa fa-envelope" aria-hidden="true"></span>
        </a>
      {% endif %}
      {# option #}
      <div class="btn-group">
        <button type="button" class="btn  btn-sm dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          <span class="fa fa-ellipsis-h" aria-hidden="true"></span>
        </button>
        <ul class="dropdown-menu dropdown-menu-right">
          <li class="d-inline-block d-lg-none">
            <a class="dropdown-item editOrdo">
              {% if cs.iconeType == 'update' %}
                Editer
              {% else %}
                Dupliquer
              {% endif %}
            </a>
          </li>
          <li class="d-inline-block d-lg-none">
            <a class="dropdown-item" href="{{ config.protocol }}{{ config.host }}{{ config.urlHostSuffixe }}/showpdf/{{ cs.id }}/" target="_blank">Imprimer</a>
          </li>
          {% if config.smtpHost or config.apicryptSmtpHost or config.faxService %}
            {% if config.smtpHost %}
              <li class="d-inline-block d-lg-none">
                <a class="dropdown-item newMail" href="#" data-formtocall="baseSendMail" data-objetID="{{ cs.id }}" data-mailtype="ns">Envoyer en clair</a>
              </li>
            {% endif %}
            {% if config.apicryptSmtpHost %}
              <li class="d-inline-block d-lg-none">
                <a class="dropdown-item newMail" href="#" data-formtocall="baseSendMailApicrypt" data-objetID="{{ cs.id }}" data-mailtype="apicrypt">Envoyer en apicrypt</a>
              </li>
            {% endif %}
            {% if (config.smtpHost or config.apicryptSmtpHost) and config.faxService %}
              <li class="dropdown-divider d-inline-block d-lg-none"></li>
            {% endif %}
            {% if config.faxService %}
              <li class="d-inline-block d-lg-none">
                <a class="dropdown-item newMail" href="#" data-formtocall="baseFax" data-objetID="{{ cs.id }}" data-mailtype="ecofax">Envoyer par fax</a>
              </li>
            {% endif %}
            {% if cs.sendMail > 0 %}
              <li class="dropdown-divider d-inline-block d-lg-none"></li>
              <li class="d-inline-block d-lg-none">
                <a class="dropdown-item" href="{{ config.protocol }}{{ config.host }}{{ config.urlHostSuffixe }}/logs/historiquePrint/{{ cs.id }}/">Historique des envois</a>
              </li>
            {% endif %}
          {% endif %}
          {% if cs.sendMail > 0 %}
            <li class="d-inline-block d-lg-none">
              <a class="dropdown-item" href="{{ config.protocol }}{{ config.host }}{{ config.urlHostSuffixe }}/logs/historiqueMailSend/{{ cs.id }}/">Envoyer</a>
            </li>
          {% endif %}
          <li class="dropdown-divider d-inline-block d-lg-none"></li>
          <li>
            <a href="#" class="dropdown-item toggleImportant" data-objetID="{{ cs.id }}" data-importanceActu="{{ cs.important }}">
              {% if cs.important == 'n' %}Rendre important{% else %}N'est plus important{% endif %}
            </a>
          </li>
          <li>
            <a class="dropdown-item" data-toggle="modal" href="#alternatTitreModal">Compléter titre</a>
          </li>
          <li role="separator" class="dropdown-divider"></li>
          <li class="disabled">
            <a class="dropdown-item" href="#">#{{ cs.id }}</a>
          </li>
          <li role="separator" class="dropdown-divider"></li>
          {% if cs.sendMail > 0 %}
            <li>
              <a class="dropdown-item" href="{{ config.protocol }}{{ config.host }}{{ config.urlHostSuffixe }}/logs/historiqueMailSend/{{ cs.id }}/">Historique des envois par mail</a>
            </li>
          {% endif %}
          <li class="dropdown-divider d-block d-lg-none"></li>
          <li>
            <a class="dropdown-item" href="{{ config.protocol }}{{ config.host }}{{ config.urlHostSuffixe }}/logs/historiquePrint/{{ cs.id }}/">Historique versions PDF générées</a>
          </li>
          <li role="separator" class="dropdown-divider"></li>
          <li>
            <a class="dropdown-item" href="{{ config.protocol }}{{ config.host }}{{ config.urlHostSuffixe }}/makepdf/{{ page.patient.id }}/ordo/{{ cs.id }}/" target="_blank">Forcer impression par défaut</a>
          </li>
          <li>
            <a class="dropdown-item" href="{{ config.protocol }}{{ config.host }}{{ config.urlHostSuffixe }}/configuration/configShowTagsForCr/{{ cs.id }}/" target="_blank">Tags utilisables dans templates</a>
          </li>
          <li role="separator" class="dropdown-divider"></li>
          <li>
            <a class="dropdown-item" href="#" class="suppCs" data-objetID="{{ cs.id }}">Supprimer</a>
          </li>
        </ul>
      </div>
    </div>
  </td>
  <td>
    <span class="icoImportant{{ cs.id }}">
      {% if cs.important == 'y' %}
        <span class="fa fa-flash" aria-hidden="true"></span>
      {% endif %}
    </span>
    {{ cs.label }}
    <span class="alternatTitre{{ cs.id }}">
      {% if cs.titre %}
        :
        {{ cs.titre|e }}{% endif %}
    </span>

  </td>
  <td class="d-none d-lg-table-cell">{{ cs.prenom|e }} {{ cs.nom|e }}</td>
  <td class="d-lg-none">{{ cs.prenom|first }}. {{ cs.nom|first }}.</td>
</tr>
