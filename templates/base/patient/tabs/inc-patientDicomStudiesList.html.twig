{% import "macroForm.html.twig" as f %}

<div class="row" style="margin-bottom : 20px;margin-top : 5px;">
  <div class="col-md-12">
    <button class="btn btn-sm tabDicomRefresh"><span class="fa fa-refresh" aria-hidden="true"></span> Rafraichir</button>

    <button class="btn btn-sm prepareEcho"><span class="fa fa-share" aria-hidden="true"></span> Envoyer infos patient à échographe</button>
  </div>
</div>

<div class="row">
  <div class="col-md-10">
    <div class="panel panel-default">
      <div class="panel-heading">Examens du patient</div>
      <div class="panel-body">
        {% if page.studiesDcData %}
          <p>Liste des examens du patient trouvés sur le serveur DICOM</p>
        {% else %}
          <p>Pas d'examens référencés pour ce patient.</p>
        {% endif %}
      </div>
      {% if page.studiesDcData %}
        <table id="listeExamens" class="table table-striped table-hover">
          <thead>
            <th></th>
            <th>Date</th>
            <th>Opérateur</th>
            <th>Description</th>
            <th>Acte correspondant</th>
          </thead>
          <tbody>
            {% for v in page.studiesDcData %}
              <tr data-study="{{ v.ID }}" class="viewStudy" style="cursor: pointer">
                <td>
                  <button class="btn btn-sm"  role="button">
                    <span class="fa fa-eye" aria-hidden="true"></span>
                  </buttom>
                </td>
                <td>{{ v.Datetime|date('d/m/Y - H:i') }}</td>
                <td>{{ v.MainDicomTags.ReferringPhysicianName }}</td>
                <td>{{ v.MainDicomTags.StudyDescription }}</td>
                <td>{{ page['studiesDcDataRapro'][v.ID]['label'] }}
                  {% if page['studiesDcDataRapro'][v.ID]['titre'] %}
                    :
                    {{ page['studiesDcDataRapro'][v.ID]['titre'] }}
                    <small>({{ page['studiesDcDataRapro'][v.ID]['creationDate']|date('d/m/Y H:i') }})</small>
                  {% endif %}
                </td>
              </tr>
            {% endfor %}
          </tbody>
        </table>
      {% endif %}
    </div>
  </div>
</div>
