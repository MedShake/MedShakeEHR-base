{% import "macroForm.html.twig" as f %}
<div class="row">
  <div class="col-12 col-xl-6 mb-4 p-0 pl-xl-0 pr-xl-3">
    <div class="card col-12 p-0">
      <div class="card-header font-weight-bold"><i class="fas fa-user-md fa-fw fa-lg text-secondary"></i> Praticiens</div>
      <div class="card-body">
        {% if config.droitDossierPeutCreerPraticien == 'true' %}
          <button type="button" class="btn btn-outline-secondary float-right ml-2 mt-1" data-toggle="modal" data-target="#newPro">Nouveau praticien</button>
        {% endif %}
        <form class="form-inline">
          <div class="form-group" style="width:100%">
            <div class="input-group my-1" style="width:100%">
              <input class="form-control" type="text" placeholder="Identité" id="searchPratID" autocomplete="off"/>
              <div class="input-group-append">
                {{ f.select ({
                'select' : {
                  'name' : 'preRelationPatientPrat',
                  'id' : 'preRelationPatientPratID',
                  'class' : 'input-group-text',
                  'values' : page.preRelationPatientPrat.formValues,
                  'valueDefaut' : el.value.preValue,
                  'autocomplete' : 'off' } }) }}

                <button type="submit" id="addRelationPatientPrat" class="btn btn-primary input-group-text">Ajouter</button>
              </div>
            </div>
          </div>
        </form>
      </div>


      <table class="table table-sm mb-0 table-striped">
				<thead>
					<tr>
						<th></th>
						<th>Praticien</th>
						<th>Qualité</th>
						<th></th>
					</tr>
				</thead>
				<tbody id="bodyTabRelationPatientPrat">
				</tbody>

			</table>
    </div>
  </div>


	<div class="col-12 col-xl-6 mb-4 p-0 pr-xl-0 pl-xl-3">
		<div class="card col-12 p-0">
			<div class="card-header font-weight-bold"><i class="fas fa-sitemap fa-fw fa-lg text-secondary mr-1"></i> Liens familiaux</div>
			<div class="card-body">
				<form class="form-inline">
					<div class="form-group" style="width:100%">
            <div class="input-group my-1" style="width:100%">
  						<input class="form-control" type="text" placeholder="Identité" id="searchPatientID" autocomplete="off"/>
              <div class="input-group-append">
					      {{ f.select ({
                'select' : {
                  'name' : 'preRelationPatientPatient',
                  'id' : 'preRelationPatientPatientID',
                  'class' : 'form-control input-group-text',
                  'values' : page.preRelationPatientPatient.formValues,
                  'valueDefaut' : el.value.preValue,
                  'autocomplete' : 'off' } }) }}
					      <button type="submit" id="addRelationPatientPatients" class="btn btn-primary input-group-text">Ajouter</button>
				      </div>
  					</div>
					</div>
				</form>
			</div>

      <table class="table table-sm mb-0 table-striped">
				<thead>
					<tr>
						<th></th>
						<th>Patient</th>
            <th>Date de naissance</th>
						<th>Qualité</th>
						<th></th>
					</tr>
				</thead>
				<tbody id="bodyTabRelationPatientPatients">
				</tbody>

			</table>
		</div>
	</div>

</div>

{# modal creation nouveau praticien #}
{% if config.droitDossierPeutCreerPraticien == 'true' %}
  {% include 'inc-patientModal-newPrat.html.twig' %}
{% endif %}
