{% import "macroForm.html.twig" as f %}
<div class="row">
  <div class=" col-md-6 px-0">
    <div class="card col-md-12 p-0">
      <div class="card-header py-0 gras">Praticiens</div>
      <div class="card-body">
        <button type="button" class="btn btn-outline-secondary float-right ml-2 mt-2" data-toggle="modal" data-target="#newPro">Nouveau praticien</button>
        <form class="form-inline">
          <div class="form-group" style="width:100%">
            <div class="input-group" style="width:100%">
              <input class="form-control my-1" type="text" id="searchPratID" autocomplete="off"/>
              <div class="input-group-append">
                {{ f.select ({
                'select' : {
                  'name' : 'preRelationPatientPrat',
                  'id' : 'preRelationPatientPratID',
                  'class' : 'input-group-text my-1',
                  'values' : page.preRelationPatientPrat.formValues,
                  'valueDefaut' : el.value.preValue,
                  'autocomplete' : 'off' } }) }}
              </div>
              <div class="input-group-append">
                <button type="submit" id="addRelationPatientPrat" class="btn btn-primary input-group-text my-1">Ajouter</button>
              </div>
            </div>
          </div>
        </form>
      </div>


      <table class="table table-sm mb-0 table-striped">
				<thead>
					<tr>
						<th></th>
						<th>Praticien</th>
						<th>Relation</th>
						<th></th>
					</tr>
				</thead>
				<tbody id="bodyTabRelationPatientPrat">
				</tbody>

			</table>
    </div>
  </div>


	<div class=" col-md-6 pr-0">
		<div class="card col-md-12 p-0">
			<div class="card-header py-0 gras">Liens familiaux</div>
			<div class="card-body">
				<form class="form-inline">
					<div class="form-group" style="width:100%">
            <div class="input-group" style="width:100%">
  						<input class="form-control my-1" type="text" id="searchPatientID" autocomplete="off"/>
              <div class="input-group-append">
					      {{ f.select ({
                'select' : {
                  'name' : 'preRelationPatientPatient',
                  'id' : 'preRelationPatientPatientID',
                  'class' : 'form-control input-group-text my-1',
                  'values' : page.preRelationPatientPatient.formValues,
                  'valueDefaut' : el.value.preValue,
                  'autocomplete' : 'off' } }) }}
				      </div>
              <div class="input-group-append">
					      <button type="submit" id="addRelationPatientPatients" class="btn btn-primary input-group-text my-1">Ajouter</button>
				      </div>
  					</div>
					</div>
				</form>
			</div>

      <table class="table table-sm mb-0 table-striped">
				<thead>
					<tr>
						<th></th>
						<th>Patient</th>
            <th>Date de naissance</th>
						<th>Relation</th>
						<th></th>
					</tr>
				</thead>
				<tbody id="bodyTabRelationPatientPatients">
				</tbody>

			</table>
		</div>
	</div>

</div>

<div id="newPro" class="modal fade" tabindex="-1" role="dialog">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title gras">Création d'un nouveau praticien</h4>
      </div>
      <div class="modal-body">
        <div class="alert alert-danger" role="alert" style="display : none;">
            Merci de considérer les informations suivantes et de corriger les champs concernés :
            <ul></ul>
        </div>
        {{ f.formbuilder(page.form , 'baseNewPro' , session) }}
      </div>
      <div class="modal-footer">
        <button type="button" class="btn" data-dismiss="modal">Fermer</button>
        <button type="button" class="btn btn-primary modal-save" data-modal="newPro" data-form="formName_baseNewPro">Créer</button>
      </div>
    </div>
  </div>
</div>
