{% import "macroForm.html.twig" as f %}

{% if page.patient.ALD %}
  {% include 'inc-patientAldStruc.html.twig' %}
{% endif %}
<div id="latForm" class="changeObserv">
    {{ f.formbuilder(page.formData_baseATCD , page.formName_baseATCD , valFormLat ) }}
</div>
{# Liens familiaux #}
{% if page.liensFamiliaux %}
<div class="col-md-12 p-0">
  <div class="card mb-3">
    <div class="card-header py-0 gras">
      Liens familiaux
      <a class="btn btn-sm float-right m-1" role="button" title="Édition des relations"
        href="{{ config.protocol }}{{ config.host }}{{ config.urlHostSuffixe }}/patient/relations/{{ page.patient.id }}/">
        <span class="fa fa-link" aria-hidden="true"></span>
      </a>
    </div>

    <table class="table table-sm mb-0 table-striped table-condensed table-hover small mb-0">
      <thead>
        <tr>
          <th></th>
          <th>patient</th>
          <th>ddn</th>
          <th>lien</th>
        </tr>
      </thead>
      <tbody>
        {% for v in page.liensFamiliaux %}
          <tr>
            <td>
              <a class="btn btn-sm" role="button" href="{{ config.protocol }}{{ config.host }}{{ config.urlHostSuffixe }}/patient/{{ v.patientID }}/"  target="_blank">
                <span class="fa fa-folder-open" aria-hidden="true"></span>
              </a>
            </td>
            <td class="gras">{{ v.nom }} {{v.prenom }}</td>
            <td>{{ v.ddn }}</td>
            <td>{{ v.typeRelation }}</td>
          </tr>
        {% endfor %}
      </tbody>

    </table>
  </div>
</div>
{% endif %}
