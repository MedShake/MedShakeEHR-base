{% import "macroForm.html.twig" as f %}
<div class="row">
    <div class="panel panel-default historiqueToday">
        <div class="panel-heading gras">Aujourd'hui</div>

        <table class="table table-hover" data-zone="historiqueToday">
            <thead>
                <tr>
                    <th class="col-md-1">Heure</th>
                    <th class="col-md-2">Actions</th>
                    <th class="col-md-7">Acte</th>
                    <th class="col-md-1">Auteur</th>
                    <th class="col-md-1"></th>
                </tr>
            </thead>
            <tbody>

                {% for cs in page.patient.today %}
                  {% include 'pht-ligne-'~ cs.groupe ~'.html.twig' %}
                {% endfor %}

            </tbody>
        </table>
    </div>
</div>
