{% import "macroForm.html.twig" as f %}
{# Formulaire de synth√®se #}
<div class="jumbotron col-md-12">
<button id="cleanNewCourrier" type="button" class="close" aria-label="Close"><span aria-hidden="true">&times;</span></button>

<form id="invisible_form" action="{{ config.protocol }}{{ config.host }}{{ config.urlHostSuffixe }}{{ page.courrier.actionForm }}" method="post" target="_blank" data-patientID="{{ page.patient.id }}">
  <input id="courrierBodyID" name="courrierBody" type="hidden" value="" />
</form>

    <div class="container">
        <div class="row" style="margin-bottom : 30px;">
            <button id="makePDF" type="button" class="btn btn-primary">
                <span class="fa fa-save" aria-hidden="true"></span>
                Imprimer & Sauver
            </button>
        </div>

        <div class="row">
            <form method="post" style="width: 21cm">
                <textarea id="editeurCourrier" name="go">
                  {% if page.courrier.pre %}
                    {{ page.courrier.pre }}
                  {% else %}
                    {% include page.courrier.printModel %}
                  {% endif %}
                </textarea>
            </form>
        </div>
    </div>

</div>
