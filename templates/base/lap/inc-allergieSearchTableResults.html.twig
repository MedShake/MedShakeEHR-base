/##
 # Template > lap : tableau des résultats de recherche allergie
 #
 # @author Bertrand Boutillier <b.boutillier@gmail.com>
 #
#}


<div class="col-md-12">
  {% if page.allergieCode is not empty %}
  <table class="table table-sm table-hover">
    {% for code, label in page.allergieCode %}
      <tr>
        <td>{{ code }}</td>
        <td>{{ label }}</td>
        <td>
          <button type="button" data-parentID="{{ page.parentID }}" data-code="{{ code }}" data-label="{{ label }}" class="btn btn-light btn-sm addAllergieToPatient">
            <span class="fa fa-arrow-circle-down" aria-hidden="true"></span></button>
        </form>
      </td>
    </tr>
  {% endfor %}
</table>
{% else %}
  Il n'y a pas de résultats pour cette recheche.
{% endif %}
</div>
