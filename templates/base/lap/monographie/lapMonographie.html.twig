{% set noMenuInBar = 'ok' %}
{% extends "page.html.twig" %}
{% import "macroForm.html.twig" as f %}
{% block title %}{{ page.speData.sp_nom }} - MedShakeEHR
{% endblock %}

{% block head %}
  {{ parent() }}
    <script defer src="{{ config.protocol }}{{ config.host }}{{ config.urlHostSuffixe }}/js/lapMonographie.js"></script>

    <script>
    var spe = {{ page.spe }};
    var section = '{{ page.section }}';
    </script>

    <style>
    h4 {
      margin-top : 1.5em;
    }
    h4:first-child {
      margin-top : 0;
    }
    </style>
{% endblock %}

{% block body %}
  <h1 style="margin-bottom : 1em;">{{ page.speData.sp_nom }}<br><small>{{ page.speData.sp_nomlong }}</small></h1>

  <div class="row">
    <div class="col-md-2">
      <ul class="nav nav-pills nav-stacked" role="tablist">
        <li role="presentation" {% if page.section == 'administratif' %} class="active"{% endif %}>
          <a href="#administratif" role="tab" aria-controls="administratif" data-toggle="pill">Renseignements administratifs</a>
        </li>
        <li role="presentation" {% if page.section == 'formesPharma' %} class="active"{% endif %}>
          <a href="#formesPharma" role="tab" aria-controls="formes pharmaceutiques" data-toggle="pill">Forme(s) pharmaceutique(s)</a>
        </li>
        <li role="presentation" {% if page.section == 'composition' %} class="active"{% endif %}>
          <a href="#composition" role="tab" data-toggle="pill">Composition</a>
        </li>
        <li role="presentation" {% if page.section == 'classifications' %} class="active"{% endif %}>
          <a href="#classifications" role="tab" data-toggle="pill">Classifications</a>
        </li>
        <li role="presentation" {% if page.section == 'pharmacologie' %} class="active"{% endif %}>
          <a href="#pharmacologie" role="tab" data-toggle="pill">Pharmacologie</a>
        </li>
        <li role="presentation" {% if page.section == 'recommandations' %} class="active"{% endif %}>
          <a href="#recommandations" role="tab" data-toggle="pill">Recommandations</a>
        </li>
        <li role="presentation" {% if page.section == 'presentations' %} class="active"{% endif %}>
          <a href="#presentations" role="tab" data-toggle="pill">Présentations</a>
        </li>
        <li role="indications" {% if page.section == 'indications' %} class="active"{% endif %}>
          <a href="#indications" role="tab" data-toggle="pill">Indications</a>
        </li>
        <li role="nonindications" {% if page.section == 'nonindications' %} class="active"{% endif %}>
          <a href="#nonindications" role="tab" data-toggle="pill">Non-indications</a>
        </li>
        <li role="contreindications" {% if page.section == 'contreindications' %} class="active"{% endif %}>
          <a href="#contreindications" role="tab" data-toggle="pill">Contre-indications</a>
        </li>
        <li role="mgpe" {% if page.section == 'mgpe' %} class="active"{% endif %}>
          <a href="#mgpe" role="tab" data-toggle="pill">Mises en garde et précautions d'emploi</a>
        </li>
        <li role="noncontreindications" {% if page.section == 'noncontreindications' %} class="active"{% endif %}>
          <a href="#noncontreindications" role="tab" data-toggle="pill">Non contre-indications</a>
        </li>
        <li role="interactions" {% if page.section == 'interactions' %} class="active"{% endif %}>
          <a href="#interactions" role="tab" data-toggle="pill">Interactions médicamenteuses</a>
        </li>
        <li role="posologies" {% if page.section == 'posologies' %} class="active"{% endif %}>
          <a href="#posologies" role="tab" data-toggle="pill">Posologies</a>
        </li>
        <li role="modeAdministration" {% if page.section == 'modeAdministration' %} class="active"{% endif %}>
          <a href="#modeAdministration" role="tab" data-toggle="pill">Mode d’administration<br>Manipulation / Incompatibilités</a>
        </li>
      </ul>
    </div>

    <div class="col-md-10">
      <div class="tab-content">
        <div role="tabpanel" class="tab-pane{% if page.section == 'administratif' %} active{% endif %}" id="administratif">Chargement ...</div>
        <div role="tabpanel" class="tab-pane{% if page.section == 'formesPharma' %} active{% endif %}" id="formesPharma">Chargement ...</div>
        <div role="tabpanel" class="tab-pane{% if page.section == 'composition' %} active{% endif %}" id="composition">Chargement ...</div>
