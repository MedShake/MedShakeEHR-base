{% set noMenuInBar = 'ok' %}
{% extends "page.html.twig" %}
{% import "macroForm.html.twig" as f %}
{% block title %}{{ page.title }} - {{ config.designAppName }}
{% endblock %}

{% block head %}
  {{ parent() }}
    <script defer src="{{ config.protocol }}{{ config.host }}{{ config.urlHostSuffixe }}/js/lapMonographie.js?{{ modules.base }}"></script>

    <script>
    var spe = {{ page.spe }};
    var section = '{{ page.section }}';
    </script>

    <style>
    h4 {
      margin-top : 1.5em;
    }
    h4:first-child {
      margin-top : 0;
    }
    </style>
{% endblock %}

{% block body %}
  {% if page.mode == 'ei' %}
    {% include('lapMonoFicheEI.html.twig') %}
  {% elseif page.mode == 'eis' %}
    {% include('lapMonoFicheEIS.html.twig') %}
  {% elseif page.mode == 'doc' %}
    {% include('lapMonoFicheDoc.html.twig') %}
  {% elseif page.mode == 'sub' and page.fiche == '1' %}
    {% include('lapMonoFicheSubA.html.twig') %}
  {% elseif page.mode == 'sub' and page.fiche == '2' %}
    {% include('lapMonoFicheSubE.html.twig') %}
  {% endif %}

{% endblock %}
