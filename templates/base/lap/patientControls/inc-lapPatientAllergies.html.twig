/##
 # Template > lap : tableau des allergies
 #
 # @author Bertrand Boutillier <b.boutillier@gmail.com>
 #
#}

<label class="w-100" for="atcdTableauAllergieStruc">Allergies</label>
{% if page.patientAllergies.allergiesData %}
  <table id="atcdTableauAllergieStruc" class="table table-sm table-hover table-bordered small">
    <tbody>
      {% for id, aller in page.patientAllergies.allergiesData %}
        <tr class="tr{{ id }} table-danger">
          <td data-toggle="collapse" data-target="#atcdDet{{ id }}lap" style="cursor: pointer">
            {{ aller.libelle }}
            <div id="atcdDet{{ id }}lap" class="collapse">
              <table class="table table-sm" style="margin-top:8px;">
                <tr>
                  <td>Code Th√©riaque</td>
                  <td>{{ aller.value }}</td>
                </tr>
                <tr>
                  <td>Auteur</td>
                  <td>{{ aller.fromName }}</td>
                </tr>
                <tr>
                  <td>Ajout le</td>
                  <td>{{ aller.registerDate }}</td>
                </tr>
              </table>
            </div>
          </td>
        </tr>
      {% endfor %}
    </tbody>
  </table>
{% endif %}
