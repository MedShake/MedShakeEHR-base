<div id="modalAjoutMedic" class="modal fade" tabindex="-1" role="dialog">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title">Ajouter un médicament</h4>
      </div>
      <div class="modal-body">
        <form>
          <div class="row">
            <div class="col-md-9">
              <textarea class="form-control gras" rows="2" id="lapFrappePrescription" autocomplete="off" style="font-size:30px" placeholder="saisir ici la prescription"></textarea>
            </div>
            <div class="col-md-3">
              <select id='uniteUtilisee' class="form-control input-sm"></select>
              <select id="voieUtilisee" class="form-control input-sm"></select>
            </div>
          </div>

            <div class="jumbotron" id="prescriptionHuman" style="margin-top : 10px">
              <div id="prescriptionHumanMedicName" class="gras"></div>
              <div id="prescriptionHumanRecap">
              </div>
              <div id="prescriptionHumanPoso"></div>
            </div>

            <div class="checkbox-inline">
              <label>
                <input type="checkbox" name="ald" value=""> ALD
              </label>
            </div>
            <div class="checkbox-inline">
              <label>
                <input type="checkbox" name="chro" value=""> TT chronique
              </label>
            </div>
            <textarea class="form-control gras" rows="1" id="prescriptionMotif" autocomplete="off" placeholder="motif de prescription (non imprimé)"></textarea>



        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-primary">Ajouter à l'ordonnance</button>
        <button type="button" class="btn btn-default" data-dismiss="modal">Annuler</button>

      </div>
    </div>
  </div>
</div>
