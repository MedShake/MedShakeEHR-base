<div class="col-md-12">
  <table class="table table-sm table-hover">
    {% for codepere, codesfils in page.cim10code %}
      {% if codepere == 'ZZ' %}
        <tr>
          <td colspan="3">Autres</td>
        </tr>
      {% endif %}
      {% for code, label in codesfils %}
        {% if code | length == 3 %}
          <tr class="table-info">
            <td>{{ code }}</td>
            <td>{{ label }}</td>
            <td>
              <button type="button" data-code="{{ code }}" data-label="{{ label }}" class="btn btn-light btn-sm catchCIM10">
                <span class="fas fa-arrow-circle-down" aria-hidden="true"></span></button>
            </td>
          </tr>
        {% elseif code|length == 4 %}
          <tr>
            <td>&nbsp;&nbsp;&nbsp;-&nbsp;{{ code }}</td>
            <td>{{ label }}</td>
            <td>
              <button type="button" data-code="{{ code }}" data-label="{{ label }}" class="btn btn-light btn-sm catchCIM10">
                <span class="fas fa-arrow-circle-down" aria-hidden="true"></span></button>
            </td>
          </tr>
        {% endif %}
      {% endfor %}
    {% endfor %}
  </table>
</div>
