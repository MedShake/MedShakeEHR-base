       var urlBase = '{{ config.protocol }}{{ config.host }}{{ config.urlHostSuffixe }}';
     </script>

 </head>
 <body>
  <div class="container" style="padding-top: 40px;">
    <div class="alert alert-danger" role="alert">{{ page.error|join('<br>') }}</div>
    {% if page.errorReloadButton %}
      <button class="btn btn-danger btn-lg btn-block" onClick="window.location.reload()"><i class="fa fa-repeat"></i> Recharger</button>
    {% endif %}
  </div>


</body>
