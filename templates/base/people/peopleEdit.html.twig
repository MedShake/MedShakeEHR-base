{% extends "page.html.twig" %}
{% import "macroForm.html.twig" as f %}
{% block title %}MedShakeEHR : Nouveau patient{% endblock %}

{% block head %}
{{ parent() }}
<script defer src="{{ config.protocol }}{{ config.host }}{{ config.urlHostSuffixe }}/js/patient.js"></script>
{% endblock %}

{% block body %}

<h1 id="identitePatient" data-patientID="{{ page.patient.id }}">
{% if page.porp == 'patient'%}
Edition des données administratives du patient {{ page.patient.3 }} {{ page.patient.2 }} <small>#{{ page.patient.id }}</small>
{% elseif page.porp == 'pro' %}
Edition des données du praticien {{ page.patient.3 }} {{ page.patient.2 }} <small>#{{ page.patient.id }}</small>
{% endif %}
</h1>


{% if page.porp == 'patient'%}
<a class="btn btn-primary" href="{{ config.protocol }}{{ config.host }}{{ config.urlHostSuffixe }}/patient/{{ page.patient.id }}/" role="button"><span class="glyphicon glyphicon-folder-open" aria-hidden="true"></span> Dossier patient</a>
<a class="btn btn-default" href="{{ config.protocol }}{{ config.host }}{{ config.urlHostSuffixe }}/patient/relations/{{ page.patient.id }}/" role="button"><span class="glyphicon glyphicon-link" aria-hidden="true"></span> Éditer les relations</a>
	<a class="btn btn-default" href="{{ config.protocol }}{{ config.host }}{{ config.urlHostSuffixe }}/pro/edit/{{ page.patient.id }}/" role="button"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Editer infos pros</a>
{% elseif page.porp == 'pro' %}
<a class="btn btn-default" href="{{ config.protocol }}{{ config.host }}{{ config.urlHostSuffixe }}/patient/edit/{{ page.patient.id }}/" role="button"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Editer infos patient</a>
{% endif %}

{% if session['form'][page.formNumber]['validationErrorsMsg'] %}
<div class="alert alert-danger" role="alert">
	Merci de considérer les informations suivantes et de corriger les champs concernés :
	<ul>
	{% for message in session['form'][page.formNumber]['validationErrorsMsg'] %}
    {% if message %}<li>{{ message }}</li>{% endif %}
	{% endfor %}
	</ul>
</div>
{% endif %}

<div class="changeObserv">
{{ f.formbuilder(page.form , page.formNumber , session) }}
</div>



{% endblock %}
