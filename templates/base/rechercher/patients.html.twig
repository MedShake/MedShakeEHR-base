{% extends "page.html.twig" %}
{% import "macroForm.html.twig" as f %}
{% block title %}MedShakeEHR :
{% if page.porp in ['patient', 'today'] %}
recherche patient
{% elseif page.porp == 'pro' %}
recherche praticien
{% elseif page.porp == 'externe' %}
associer patient
{% endif %}{% endblock %}

{% block head %}
{{ parent() }}
<script defer src="{{ config.protocol }}{{ config.host }}{{ config.urlHostSuffixe }}/js/rechercher.js"></script>
<style>
.openPatient td:nth-child(-n+7) {
	cursor: pointer;
}
</style>
{% endblock %}
{% block body %}


{% if page.porp == 'patient'%}
<h1>Recherche patient</h1>
{% elseif page.porp == 'today' %}
<h1>Patients du jour</h1>
{% elseif page.porp == 'pro' %}
<h1>Recherche praticien</h1>
{% elseif page.porp == 'externe' %}
<h1>Associer un patient externe à un patient MedShakeEHR</h1>
{% endif %}


<div class="row" style="margin-top : 40px;">


<form class="form-inline col-md-10" data-dataset="data_types">

	<div class="form-group col-md-6">
	{{ f.input ({
		'input' : {
			'type' : 'text',
			'id' : 'd2',
			'name' : 'lastname',
      'value' : page.patient.administrativeDatas.lastname|default(page.patient.administrativeDatas.birthname|default('')) ~ ' ' ~  (page.patient.administrativeDatas.firstname|default('')),
			'placeholder' : 'Identité',
			'class' : 'form-control col-md-12 searchupdate jqautocomplete',
			'autocomplete' : 'off',
			'dataAcTypeID' : 'data-acTypeID="2:1:3"',
			'datatypeid' : '2'
		},
		'label' : {
			'position' : 'before',
		}
	}) }}
	</div>

	<div class="form-group">
	{{ f.selectOptgroup ({
		'select' : {
			'id' : 'autreCrit',
			'name' : 'autre',
			'class' : 'form-control',
			'values' : page.tabTypes
		},
		'label' : {
			'position' : 'before',
			'label' : 'Autre',
		}
	}) }}
	</div>

	<div class="form-group ml-2">
	{{ f.input ({
		'input' : {
			'id' : 'autreCritVal',
			'type' : 'text',
			'name' : 'autre',
			'class' : 'form-control searchupdate'
		},
		'label' : {
			'position' : 'before',
			'label' : '',
		}
	}) }}
	</div>

</form>

<div class="col-md-2">

{% if page.porp in ['patient', 'today'] %}
  <a href="{{ config.protocol }}{{ config.host }}{{ config.urlHostSuffixe }}/patient/create/" class="btn btn-primary float-right m-1" role="button">Nouveau patient</a>
{% elseif page.porp == 'pro' %}
  <a href="{{ config.protocol }}{{ config.host }}{{ config.urlHostSuffixe }}/pro/create/" class="btn btn-primary float-right m-1" role="button">Nouveau praticien</a>
{% endif %}
</div>

</div>

<div class="row">
	<div id="listing" data-porp="{{ page.porp }}" class="col-md-12" style="margin-top : 40px;">
	</div>
</div>

{% if page.porp == 'externe' %}
<div>
  <a href="javascript:void(0)" class="btn btn-primary extToNew" data-externID={{ page.patient.id }} role="button">Créer nouveau patient</a>
</div>
{% endif %}

{% endblock %}
