/##
 # Transmissions, bloc des réponses pour inclusion
 #
 # @author Bertrand Boutillier <b.boutillier@gmail.com>
 #}

 {% for reponse in page.transmissionReponses %}
   <div class="card my-4">
     <div class="card-header">
       {{ reponse.identiteAuteur }} <small>
       {% if reponse.registerDate|date('Ymd') != "now"|date('Ymd') %}
        {{ reponse.registerDate|date('d/m/Y H:i') }}
       {% else %}
         Aujourd'hui à {{ reponse.registerDate|date('H:i') }}
       {% endif %}</small>
       {% if user.id == reponse.fromID %}
       <div class="btn-group">
         <button class="btn btn-sm btn-light editerReponse" data-transmissionid="{{ reponse.id }}"><i class="fa fa-pencil-alt"></i></button>
        <button class="btn btn-sm btn-light effacerTransmission" data-transmissionid="{{ reponse.id }}"><i class="far fa-trash-alt"></i></button>
      </div>
       {% endif %}
     </div>
     <div class="card-body">
       {{ reponse.texte|nl2br }}
     </div>
   </div>
 {% endfor %}
